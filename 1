com.app package->app.java class
package myproject;
import java.util.ResourceBundle;
public class App {
	public int login(String in_user,String in_password) {
		 ResourceBundle rb=ResourceBundle.getBundle("config");
		 String user=rb.getString("username");
		 String password=rb.getString("password");
		 
		 if(in_user.equals(user) && in_password.equals(password))
			 return 1;
		 else 
			 return 0;
		 
	 }
}
config.properties
username=abc
password=abc
com.test package->Apptest.java class
package myproject;

import org.testng.Assert;

public class AppTest {
	@Test
	public void testlogin1() {
		App myapp=new App();
		Assert.assertEquals(0,myapp.login("abc","avb"));
	}
	@Test
	public void testlogin2() {
		App myapp=new App();
		Assert.assertEquals(1,myapp.login("abc","abc"));
	}
}
pom
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>tools</groupId>
  <artifactId>myproject</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
